# ===== Core LLM =====
GEMINI_API_KEY= << GEMINI API KEY >>
GEMINI_SYNTHESIS_MODEL=gemini-2.5-pro
GEMINI_PLANNER_MODEL=gemini-2.5-flash
GEMINI_JUDGE_MODEL=gemini-2.5-pro

# ===== Feature Toggles =====
ESPY_ENABLE=false
LINKEDIN_FINDER_ENABLE=true
LINKEDIN_VERIFY_ENABLE=true
X_FINDER_ENABLE=false
X_VERIFY_ENABLE=false
GITHUB_EXTRAS_ENABLE=true
SCRAPE_ALLOWLIST_ENABLE=false

# ===== Geocoding =====
OPENCAGE_API_KEY=<< OPENCAGE API KEY >>

# ===== Third-party Tool/API Keys =====
NUMVERIFY_API_KEY=<< NUMVERIFY API KEY >>
ESPY_API_KEY=<< ESPY API KEY >>
HYPERBROWSER_API_KEY=<< HYPERBROWSER API KEY >>
SERPAPI_API_KEY=<< SERPAPI API KEY >>
SCRAPINGDOG_API_KEY=<< SCRAPINGDOG API KEY >>

# ===== Executor / Scrape policy =====
# Comma-separated allowlist if enabled
SCRAPE_ALLOWLIST_HOSTS=github.com,x.com,medium.com,dev.to
SCRAPE_MAX_URLS_PER_REQUEST=5

# ===== LinkedIn (Finder) =====
LINKEDIN_FINDER_MAX_QUERIES=4
LINKEDIN_MAX_RESULTS=3
LINKEDIN_FINDER_MKT_DEFAULT=en-US
LINKEDIN_FINDER_TIMEOUT_S=10

# ===== LinkedIn (Verify) =====
LINKEDIN_VERIFY_COUNTRY=US
LINKEDIN_VERIFY_TIMEOUT_S=30

# ===== X / Twitter (Finder/Verify) =====
X_FINDER_MAX_QUERIES=4
X_MAX_RESULTS=3
X_FINDER_MKT_DEFAULT=en-US
X_FINDER_TIMEOUT_S=10
X_VERIFY_TIMEOUT_S=20

# ===== ESPY Client (Polling) =====
ESPY_POLL_INTERVAL_SEC=4
ESPY_POLL_MAX_ATTEMPTS=20

# ===== Hyperbrowser (Scrape/Extract/Crawl) =====
HYPERBROWSER_LOG_LEVEL=INFO
HYPERBROWSER_ENABLE_EXTRACT=true
HYPERBROWSER_ENABLE_SCRAPE=true
HYPERBROWSER_ENABLE_CRAWL=true

HYPERBROWSER_CONCURRENCY=2
HYPERBROWSER_TIMEOUT_MS=90000
HYPERBROWSER_EXTRACT_TIMEOUT_MS=90000
HYPERBROWSER_SCRAPE_TIMEOUT_MS=30000
HYPERBROWSER_CRAWL_TIMEOUT_MS=90000

HYPERBROWSER_USE_PROXY=false
HYPERBROWSER_PROXY_COUNTRY=
HYPERBROWSER_SOLVE_CAPTCHAS=false

HYPERBROWSER_LOCALES=en
HYPERBROWSER_USE_STEALTH=false
HYPERBROWSER_ADBLOCK=false
HYPERBROWSER_TRACKERS=false
HYPERBROWSER_ANNOYANCES=false
HYPERBROWSER_ACCEPT_COOKIES=false

HYPERBROWSER_SCREEN_WIDTH=1920
HYPERBROWSER_SCREEN_HEIGHT=1080
HYPERBROWSER_OPERATING_SYSTEMS=windows
HYPERBROWSER_DEVICE=desktop
HYPERBROWSER_WAIT_FOR_MS=0

HYPERBROWSER_SCRAPE_FORMATS=markdown
HYPERBROWSER_SCRAPE_ONLY_MAIN_CONTENT=true
HYPERBROWSER_SCRAPE_PER_REQUEST_TIMEOUT_MS=10000

HYPERBROWSER_CRAWL_MAX_PAGES=5
HYPERBROWSER_CRAWL_INCLUDE_PATTERNS=
HYPERBROWSER_CRAWL_EXCLUDE_PATTERNS=
HYPERBROWSER_CRAWL_SCRAPE_FORMATS=markdown
HYPERBROWSER_CRAWL_ONLY_MAIN_CONTENT=true
HYPERBROWSER_CRAWL_PER_PAGE_TIMEOUT_MS=10000

HYPERBROWSER_EXTRACT_MAX_LINKS=10
HYPERBROWSER_EXTRACT_WAIT_FOR_MS=0

HYPERBROWSER_REDACT_PII_IN_LOGS=true
HYPERBROWSER_CACHE_TTL_MS=30000

# ===== Holehe / Ignorant (Email checks) =====
HOLEHE_CLI_TIMEOUT=60
HOLEHE_RESOLVER_CONCURRENCY=5
HOLEHE_RESOLVER_TIMEOUT_MS=10000
HOLEHE_RESOLVER_RETRIES=1
IGNORANT_CLI_TIMEOUT=60

# ===== Config Paths =====
# Optional override for resolver configuration
# RESOLVER_CONFIG_PATH=config/resolvers.json
